@page
@model MadStickWebAppTester.Pages.StorageUnits.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StorageUnits[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StorageUnits[0].Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StorageUnits)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @if (Model.ViewCans.CanEdit)
                    {
                        <a asp-page="./Edit" asp-route-id="@item.StorageUnitId">Edit</a> <text>|</text>
                    }
                    @if (Model.ViewCans.CanViewDetail)
                    {
                        <a asp-page="./Details" asp-route-id="@item.StorageUnitId">Details</a> <text>|</text>
                    }
                    @if (Model.ViewCans.CanDelete)
                    {
                        <a asp-page="./Delete" asp-route-id="@item.StorageUnitId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
